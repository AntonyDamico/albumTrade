<% include ../partials/header %>

  <!-- Bienvenida y search -->
  <div class="section">
    <div class="row">
      <div class="col m8 offset-m2">
        <div class="card">
          <div class="card-content center">
            <span class="card-title">
              <h1 class="header">Bienvenido!</h1>
            </span>
            <h5>Explora los albumes que otras personas quieren intercambiar</h5>
            <hr>
            <div class="row">
              <div class="s12 col m6">
                <form action="" method="GET">
                  <div class="input-field">
                    <i class="material-icons prefix">search</i>
                    <input id="icon_prefix" type="text">
                    <label for="icon_prefix">Album</label>
                  </div>
                </form>
              </div>
              <div class="col s12 m6">
                <form action="" method="GET">
                  <div class="input-field">
                    <i class="material-icons prefix">search</i>
                    <input id="icon_prefix" type="text">
                    <label for="icon_prefix">Artista</label>
                  </div>
                </form>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Fin de bienvenida -->


  <div class="container">
    <div class="row">
      <% albums.forEach(function(album){ %>
        <div class="col s12 m6 l4">
          <div class="card">
            <div class="card-image album-image">
              <img src="<%= album.cover %>">
              <a class="btn-floating halfway-fab waves-effect waves-light" href="#">
                <i class="material-icons">add</i>
              </a>
            </div>
            <div class="card-content album">
              <span class="card-title">
                <a href="#"><%= album.name %></a>
              </span>
              <ul>
                <li><%= album.band %></li>
                <li><%= album.year %></li>
              </ul>
            </div>
            <div class="card-action">
              <a href="#" class="blue-text">Ver Más</a>
            </div>
          </div>
        </div>
        <% }); %>

    </div>
  </div>

  <!-- Paginación -->
  <div class="center">
    <br>
    <ul class="pagination">
      <li class="disabled">
        <a href="#!">
          <i class="material-icons">chevron_left</i>
        </a>
      </li>
      <li class="active teal">
        <a href="#!">1</a>
      </li>
      <li class="waves-effect">
        <a href="#!">2</a>
      </li>
      <li class="waves-effect">
        <a href="#!">3</a>
      </li>
      <li class="waves-effect">
        <a href="#!">4</a>
      </li>
      <li class="waves-effect">
        <a href="#!">5</a>
      </li>
      <li class="waves-effect">
        <a href="#!">
          <i class="material-icons">chevron_right</i>
        </a>
      </li>
    </ul>
  </div>
  <br>
  <!-- Final de paginación -->

  <% include ../partials/footer %>